{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
